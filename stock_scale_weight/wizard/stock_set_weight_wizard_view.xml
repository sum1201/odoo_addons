<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_stock_weight_wizard_form" model="ir.ui.view">
        <field name="name">stock.weight.wizard.form</field>
        <field name="model">stock.weight.wizard</field>
        <field name="type">form</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="type"/>
                    </group>
                    <group>
                        <field name="weight" widget="scale"/>
                    </group>
                </group>
                <footer>
                    <button type="special" special="cancel" string="Cancel"/>
                    <button type="object" string="Submit" name="button_set_weight" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_stock_weight_wizard_view">
        <field name="name">Product Scale Weight</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.weight.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>